<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTitle</item>
        <item name="android:actionMenuTextColor">@color/colorTitle</item>
    </style>

    <style name="SectionHead">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DetailTitleStyle">
        <item name="android:layout_marginTop">@dimen/content_margin_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LeftRightButtonStyle">
        <item name="android:tint">@android:color/darker_gray</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="ServingStyle">
        <item name="android:layout_marginTop">@dimen/content_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/serving_margin_bottom</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.SearchResult.Subtitle
        </item>
    </style>

    <style name="ContentRecyclerViewStyle">
        <item name="android:layout_marginTop">@dimen/content_margin_vertical</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="DetailDescTextStyle">
        <item name="android:layout_marginLeft">@dimen/detail_desc_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_desc_margin</item>
        <item name="android:layout_marginTop">@dimen/detail_desc_margin</item>
        <item name="android:layout_marginBottom">@dimen/detail_desc_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="IngredientListTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/ingredient_text_margin</item>
        <item name="android:layout_marginStart">@dimen/ingredient_text_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MeasureTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:layout_marginRight">@dimen/measure_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/measure_text_margin</item>
    </style>
</resources>
